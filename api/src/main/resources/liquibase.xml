        <addForeignKeyConstraint constraintName="surgical_appointment_voided_by_fk"
                                 baseTableName="surgical_appointment" baseColumnNames="voided_by"
                                 referencedTableName="users" referencedColumnNames="user_id"/>
    </changeSet>
